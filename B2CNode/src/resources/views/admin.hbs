<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="/img/favicon.png">
    <title>Admin B2C</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        header{
            position: fixed;
            top: 0;
            width: 100%;
            height: 40px;
            background-color: rgb(129, 129, 129);
            padding: 20px 50px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #1d2327;
        }
        .h4_name_admin{
            font-size: 16px;
            color: #fff;
        }
        .info_box_admin{
            position: relative;
            font-size: 16px;
            line-height: 40px;
            color: #fff;
        }
        .go_back_home{
            text-decoration: none;
            color: #fff;
        }
        .go_back_home:hover{
            color: red;
        }
        .app{
            margin-top: 40px;
            width: 100%;
            height: 500px;
            display: flex;
        }
        .tab_left_app{
            height: 100%;
            width: 200px;
            background-color: #1d2327; 
        }
        .box_container{            
            flex: 1;
        }
        .list_tab_left_app{
            width: 100%;
            list-style: none;  
        }
        .item__tab_left_app{
            text-align: center;
            width: 100%;
            font-size: 16px;
            line-height: 50px;
            height: 50px;
            color: #fff;
        }
        .active_left{
            background-color: #e14d43;
        }
        .pane__tab_left_app{
            display: none;
            width: 100%;
            height: 100%;
        }
        .active_left_pane{
            display: block;
        }
        .box_content_right{
            width: 100%;
            height: 100%;
        }
        .list_tab_top_app{
            display: flex;
            list-style: none;
            width: 100%;
        }
        .item_tab_top_app{
            background-color: #ccc;
            flex: 1;
            text-align: center;
            align-items: 22px;
            padding: 10px 20px;
        }
    </style>
</head>
<body>
    <header>
        <h4 class="h4_name_admin">Xin chào, {{session.username}}</h4>
        <div class="info_box_admin">
        <a href="/" class="go_back_home">Quay về trang chủ</a>
        </div>
    </header>
    <div class="app">
        <div class="tab_left_app">
            <ul class="list_tab_left_app">
                <li class="item__tab_left_app active_left">Danh sách tài khoản</li>
                <li class="item__tab_left_app">Danh sách tài khoản</li>
                <li class="item__tab_left_app">Danh sách tài khoản</li>
                <li class="item__tab_left_app">Danh sách tài khoản</li>
            </ul>
        </div>
        <div class="box_container">
            <div class="pane__tab_left_app active_left_pane">
                <div class="box_content_right">
                    <ul class="list_tab_top_app">
                        <li class="item_tab_top_app">Tât cả tài khoản người dùng</li>
                        <li class="item_tab_top_app">Tài khoản có quyền đăng sách</li>
                        <li class="item_tab_top_app">Tài khoản admin</li>
                        <li class="item_tab_top_app">Tài khoản bị disable</li>
                    </ul>
                </div>
            </div>
            <div class="pane__tab_left_app" style="background-color: rgb(104, 31, 69);">
                456
            </div>
            <div class="pane__tab_left_app" style="background-color: rgb(27, 196, 75);">
                789
            </div>
            <div class="pane__tab_left_app" style="background-color: rgb(105, 15, 15);">
                abc
            </div>
        </div>
    </div>
    <script>
        const $ = document.querySelector.bind(document);
        const $$ = document.querySelectorAll.bind(document);
        
        const tabsLeft = $$('.item__tab_left_app');
        const pansLeft = $$('.pane__tab_left_app');
        //console.log(tabsLeft,pansLeft)
        tabsLeft.forEach((tabLeft, index) =>{
            const pane = pansLeft[index]
            tabLeft.onclick = function(){
                $('.pane__tab_left_app.active_left_pane').classList.remove('active_left_pane');
                $('.item__tab_left_app.active_left').classList.remove('active_left');
                this.classList.add('active_left');
                pane.classList.add('active_left_pane');
            }
        })
    </script>
</body>
</html>