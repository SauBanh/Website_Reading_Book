                            <ul class="list">
                                {{#each lstUser}}
                                <li class="item">
                                    <div class="box_item">
                                        <div class="box_user">
                                            <h4 class="user_name">{{this.username}}</h4>
                                            <h4 class="email">{{this.email}}</h4>
                                        </div>
                                        <h4>Ngày tạo: {{toDate this.createdAt}}</h4>
                                        {{#if (checkType ../tab this)}}
                                            <span style="color: #000">{{changeSpan ../tab}}<a href="/admin/{{../tab}}/{{this.email}}/{{disableRule ../tab}}" class="status_account active_account">Active</a></span> 
                                        {{else}}
                                            <span style="color: #000">{{changeSpan ../tab}}<a href="/admin/{{../tab}}/{{this.email}}/{{enableRule ../tab}}" class="status_account disable_account">Disable</a></span> 
